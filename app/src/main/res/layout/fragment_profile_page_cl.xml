<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilePageCl">

    <ImageView
        android:id="@+id/background_header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#5a8fbb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/background_header"
        app:layout_constraintTop_toTopOf="@id/back_button"
        app:shapeAppearanceOverlay="@style/Circular"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/more_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_more_vert_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_side_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_search"
        app:layout_constraintEnd_toStartOf="@+id/more_button"
        app:layout_constraintTop_toTopOf="@+id/more_button" />

    <ImageView
        android:id="@+id/apps"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_apps"
        app:layout_constraintEnd_toStartOf="@id/search_side_button"
        app:layout_constraintTop_toTopOf="@id/search_side_button" />

    <TextView
        android:id="@+id/full_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Александр Пушкин"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/background_header"
        app:layout_constraintEnd_toEndOf="@id/background_header"
        app:layout_constraintStart_toStartOf="@id/background_header"
        app:layout_constraintTop_toTopOf="@id/background_header" />

    <TextView
        android:id="@+id/status_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="online"
        android:textColor="#c0edff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/background_header"
        app:layout_constraintStart_toStartOf="@+id/full_user_name"
        app:layout_constraintTop_toTopOf="@id/full_user_name" />

    <ImageButton
        android:id="@+id/add_photo_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/info_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Account"
        android:textColor="#7090a7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_header" />

    <TextView
        android:id="@+id/phone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="+7 (936) 123-45-87"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/info_account"
        app:layout_constraintTop_toBottomOf="@id/info_account" />

    <TextView
        android:id="@+id/about_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Tap to change phone number"
        android:textColor="#747675"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/phone_info"
        app:layout_constraintTop_toBottomOf="@id/phone_info" />

    <ImageView
        android:id="@+id/line_border_1"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#ebebeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_number" />

    <TextView
        android:id="@+id/id_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="EvgeshaOG"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/about_number"
        app:layout_constraintTop_toBottomOf="@id/about_number" />

    <TextView
        android:id="@+id/help_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Username"
        android:textColor="#747675"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/id_username"
        app:layout_constraintTop_toBottomOf="@id/id_username" />

    <ImageView
        android:id="@+id/line_border_2"
        android:layout_width="400dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#ebebeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/help_username" />


    <TextView
        android:id="@+id/status_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Какая нибудь цитата"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/help_username"
        app:layout_constraintTop_toBottomOf="@id/help_username" />

    <TextView
        android:id="@+id/bio_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Bio"
        android:textColor="#747675"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/status_username"
        app:layout_constraintTop_toBottomOf="@id/status_username" />

    <ImageView
        android:id="@+id/grey_border"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:background="#f0f0f0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bio_username" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:textColor="#7090a7"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grey_border" />

    <ImageView
        android:id="@+id/notification_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_notifications_none"
        app:layout_constraintStart_toStartOf="@+id/settings"
        app:layout_constraintTop_toBottomOf="@id/settings" />

    <ImageView
        android:id="@+id/lock_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_lock_24"
        app:layout_constraintStart_toStartOf="@id/notification_button"
        app:layout_constraintTop_toBottomOf="@id/notification_button" />

    <ImageView
        android:id="@+id/time_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_access_time_24"
        app:layout_constraintStart_toStartOf="@id/lock_button"
        app:layout_constraintTop_toBottomOf="@id/lock_button" />

    <ImageView
        android:id="@+id/chat_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_chat_bubble_outline_24"
        app:layout_constraintStart_toStartOf="@id/time_button"
        app:layout_constraintTop_toBottomOf="@id/time_button" />

    <ImageView
        android:id="@+id/folder_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_folder_open_24"
        app:layout_constraintStart_toStartOf="@id/chat_button"
        app:layout_constraintTop_toBottomOf="@id/chat_button" />

    <ImageView
        android:id="@+id/devices_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_devices_24"
        app:layout_constraintStart_toStartOf="@id/folder_button"
        app:layout_constraintTop_toBottomOf="@id/folder_button" />

    <TextView
        android:id="@+id/notification_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Notifications and Sounds"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/notification_button"
        app:layout_constraintTop_toTopOf="@id/notification_button" />

    <TextView
        android:id="@+id/lock_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Privacy and Security"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/lock_button"
        app:layout_constraintTop_toTopOf="@id/lock_button" />

    <ImageView
        android:id="@+id/line_border_3"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#ebebeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lock_tv" />

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Data and Storage"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/time_button"
        app:layout_constraintTop_toTopOf="@id/time_button" />

    <TextView
        android:id="@+id/chat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Chat Settings"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/chat_button"
        app:layout_constraintTop_toTopOf="@id/chat_button" />

    <ImageView
        android:id="@+id/line_border_4"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#ebebeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_tv" />

    <TextView
        android:id="@+id/folder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Chat Folders"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/folder_button"
        app:layout_constraintTop_toTopOf="@id/folder_button" />

    <TextView
        android:id="@+id/devices_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Devices"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/devices_button"
        app:layout_constraintTop_toTopOf="@id/devices_button" />

    <ImageView
        android:id="@+id/line_border_5"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#ebebeb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/devices_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>